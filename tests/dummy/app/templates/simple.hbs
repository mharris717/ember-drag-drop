<h3>A simple example of one drag and one drop</h3>

<div class="grid">
  <div class="block">
    <h4>Demo:</h4>

    {{#draggable-object-target action="dragResult" resultText='Drag is Complete' dragOverAction='draggingOverTarget' dragOutAction='leftDragTarget'}}
      {{#if dragFinishText}}
        {{dragFinishText}}
      {{else}}
        Drag here to complete Action
      {{/if}}
    {{/draggable-object-target}}

    {{#draggable-object content=myObject dragStartAction='dragStart' dragEndAction='dragEnd' }}
      {{#if dragStartedText}}
        {{dragStartedText}}
      {{else if dragEndedText}}
        {{dragEndedText}}
      {{else}}
        Drag Me
      {{/if}}
    {{/draggable-object}}

  </div>

  <div class="block auto">
    <h4>Resources:</h4>
    <h5>Template:</h5>
    <a href="https://github.com/mharris717/ember-drag-drop/blob/master/tests/dummy/app/templates/simple.hbs" target="_blank">https://github.com/mharris717/ember-drag-drop/blob/master/tests/dummy/app/templates/simple.hbs</a>
    <h5>Controller:</h5>
    <a href="https://github.com/mharris717/ember-drag-drop/blob/master/tests/dummy/app/controllers/simple.js" target="_blank">https://github.com/mharris717/ember-drag-drop/blob/master/tests/dummy/app/controllers/simple.js</a>
  </div>
</div>



