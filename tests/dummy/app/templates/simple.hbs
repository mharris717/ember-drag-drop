<h3>A simple example of one drag and one drop</h3>

<DraggableObjectTarget 
  @action={{this.dragResult}} 
  @resultText="Drag is Complete" 
  @dragOverAction={{this.draggingOverTarget}} 
  @dragOutAction={{this.leftDragTarget}} 
  @overrideClass="dropTarget">
  {{#if this.dragFinishText}}
    {{this.dragFinishText}}
  {{else}}
    Drag here to complete Action
  {{/if}}
</DraggableObjectTarget>

<DraggableObject 
  @content={{this.myObject}} 
  @dragStartAction={{this.dragStart}} 
  @dragEndAction={{this.dragEnd}}
   @overrideClass="dragObject">

  {{#if this.dragStartedText}}
    {{this.dragStartedText}}
  {{else if this.dragEndedText}}
    {{this.dragEndedText}}
  {{else}}
    Drag Me
  {{/if}}

</DraggableObject>
